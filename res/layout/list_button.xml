<!-- Layout for SearchableActivity.
 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:weightSum="3" >

        <TextView
            android:id="@+id/btnJpVn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/btn_jp_vn"
            android:background="@color/selectedButton" />

        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="|"/>

        <TextView
            android:id="@+id/btnJpEn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/btn_jp_en" />

        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="|"/>

        <TextView
            android:id="@+id/btnKanji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/btn_kanji" />

</LinearLayout>


